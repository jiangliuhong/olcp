<?xml version="1.0" encoding="UTF-8" ?>
<entity title="系统字段">
    <short-description>系统表定义，存储所有表字段</short-description>
    <filed name="name" title="字段名" type="String" length="15"/>
    <filed name="title" title="显示名" type="String" length="20"/>
    <filed name="table" title="所属表" type="Reference" reference="sys_tables"/>
    <filed name="type" title="类型" default-value="String" length="20"/>
    <filed name="length" title="长度" length="10"/>
    <filed name="precision" title="精度" length="10"/>
    <filed name="defaultValue" title="字段默认值" type="String" length="255"/>
    <filed name="shortDescription" title="简介" type="String" length="30"/>
    <filed name="required" title="是否必填" type="Boolean"/>
    <filed name="reference" title="引用表" type="SysId">
        <short-description>当字段类型为Reference时的关联表</short-description>
    </filed>
</entity>